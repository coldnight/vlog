{% extends "base.jinja" %}
{% block content %}
<h2>{{title}}</h2>

<form action="" method="post">

<p>
<label for="name">用户名</label>
<input type="text" value="" id="name" name="name" size="25" /> 
</p>

<p>
<label for="password">密　码</label>
<input type="password" id="password" name="password" value="" size="25" />
</p>
<p>
	<input type="button" value=" 登 入 " id="submit" class="btn" style="margin-left:70px;" />
    <input type="reset" name="submit" class="btn" style="margin-left:70px;" /><br/><br/>
</p>
</form>
<script type="text/javascript">
$("#submit").click(function(){
    var username = $("#name").val();
    var password = $("#password").val();
    $.ajax({
        type:"POST",
        url:"/admin/login",
        dataType:"json",
        data:{"name":username, "password":password},
        success: function(data){
            if (data.status){
                window.location = '/admin/';
            }else {
                alert(data.errmsg);
            }
        },
    });
});
</script>
{% endblock %}
