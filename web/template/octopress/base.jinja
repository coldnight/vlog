<head>
  <meta charset="utf-8">
  <title>
      {% block title %}
      {% if title %}
        {{title }} | {{SITE_TITLE}}
      {% else %}
        {{SITE_TITLE}} | {{SITE_SUB_TITLE}}
      {% endif %}
      {% endblock %}
  </title>
  <meta name="author" content="{{ author }}" />
  <meta name="HandheldFriendly" content="True" />
  <meta name="MobileOptimized" content="320" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="alternate" type="application/rss+xml" title="{{SITE_TITLE}} RSS Feed" href="/feed" />
  <link rel="shortcut icon" href="/favicon.ico" type="image" />

  <link href="/static/themes/octopress/css/screen.css" media="screen, projection" rel="stylesheet" type="text/css" />

  <script src="/static/js/jquery.js"></script>
  <script src="/static/themes/octopress/js/main.js"></script>
  <link rel='index' title='{{SITE_TITLE}}' href='/' />
  <meta name="description" content="{{description}}" />
  <meta name="keywords" content="{{keywords}}" />

<script type="text/javascript">
    $(function(){
        $("#go-to-top").click(function(){
            $("html, body").animate({'scrollTop': 0}, 400);
            return false;
        });
        $(window).scroll(function() {
            var top = $(document).scrollTop();
            var g = $("#go-to-top");
            if (top > 300 && g.is(":hidden")) {
                g.fadeIn();
            } else if(top < 300 && g.is(":visible")) {
                g.fadeOut();
            }
        }); 
    })
    
</script>


</head>
<body>
  <header role="banner">
    <hgroup>
    <h1><a href="/">{{SITE_TITLE}}</a></h1>
        <h2>{{SITE_SUB_TITLE}}</h2>
    </hgroup>
  </header>
  <nav role=navigation>
    <ul role=subscription data-subscription="rss">
      <li><a href="/feed" rel="subscribe-rss" title="subscribe via RSS">RSS</a></li>
    </ul>
    <script type="text/javascript">
        var dispatch = function() {
            q = document.getElementById("q");
            if (q.value != "") {
                window.open('http://www.google.com/search?q=site:{{request.host}}/%20' + q.value, "_blank");
                return false;
            } else {
                return false;
            }
        }
    </script>    
    <form onsubmit="return dispatch()">
      <fieldset role="site-search">
        <input class="search" type="search" id="q" placeholder="Search" />
      </fieldset>
    </form>
    <ul role=main-navigation>
      <li><a href="/">Blog</a></li>
      {% for p in page %}
      <li><a href="/page/{{p.id}}">{{p.title}}</a></li>
      {% endfor %}
    </ul>
  </nav>
  <div id="main">
    <div id="content">

<!-- block content -->

        {% block content %}
        {% endblock %}

<!--  block content end -->

      
            <!-- block sidebar -->
            {% include("sider.jinja") %}
            <!-- block sidebar end -->
        
    </div>
  </div>
