<span id="h"></span>
{% for cobj in post_comments %}
<a name="{{cobj.id}}"></a>
<li id="comment{{cobj.id}}"> 
    <div> 
        <div> 
        <img alt='' src="http://www.gravatar.com/avatar/{{cobj.gravatar}}?s=48&d=monsterid" class='avatar' height='48' width='48' />
        <div class="fl">
        <a href='{{cobj.url}}' target="_blank" rel="nofollow">{{cobj.name}}</a>
        <span class="grey">says:</span>  <br/><em class="grey">
        <a href="/post/{{cobj.pid}}#comments}">{{cobj.date}}</a></em>
        </div>
        <div class="fr">
        <a href="#respond" onclick="reply('{{cobj.id}}','{{cobj.name}}')">Reply</a>
        {% if uid and username %}
            {% if not cobj.allowed %}
                {% if ispage %}
                    <a href="/admin/allow/comment/{{post.id}}/{{cobj.id}}/page">Allow</a>
                {% else %}
                    <a href="/admin/allow/comment/{{post.id}}/{{cobj.id}}/post">Allow</a>
                {% endif %}
            {% endif %}
            <a href="/admin/del/comment/{{cobj.id}}">Del</a>
        {% endif %}</div>
        <div class="c"></div>
        </div> 
{% if cobj.allowed or (username and uid) %}
        <p>{{cobj.content}}</p>
        {% else %}
        <em>Your comment is awaiting moderation.</em>
        {% endif %} 
    </div>
</li> 
{% endfor %}
